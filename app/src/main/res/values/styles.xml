<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorIcon">@color/darkColorIcon</item>
    </style>
    
    <style name="MyTooolbar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>

    </style>
    
    <style name="dialog" parent="Theme.MaterialComponents.BottomSheetDialog">

    </style>

    <style name="TaskContent" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TaskCDate" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/colorSecondaryText</item>

    </style>

</resources>
